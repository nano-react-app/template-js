{
  "name": "nano-react-app-template",
  "version": "0.1.0",
  "description": "Hard to get more minimal than this React app",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "babel-preset-nano-react-app": "^0.1.0",
    "parcel-bundler": "^1.11.0"
  },
  "babel": {
    "presets": ["nano-react-app"],
    "plugins": [
      ["@babel/plugin-proposal-class-properties", { "loose": true }],
      ["@babel/plugin-transform-react-jsx", { "pragmaFrag": "React.Fragment" }]
    ]
  } 
}
